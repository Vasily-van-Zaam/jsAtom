doctype html
//base
html
    head
        meta(charset="utf-8")
        meta(name="format-detection" content="telephone=no")
        meta(name="msapplication-tap-highlight" content="no")
        meta(name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi")

        link(href='lib/jquery/macstore.min.css' rel='styleSheet')
        link(href='lib/jquery/jquery.mobile.icons.min.css' rel='styleSheet')

        link(href='lib/jquery/jquery.mobile.structure-1.4.5.min.css' rel='stylesheet')

        script(src='lib/jquery/jquery-1.11.1.min.js')
        script(src='lib/jquery/jquery.mobile-1.4.5.min.js')

        mixin divHeader(title)
                div(data-role='header' data-position='fixed')
                    a.ui-btn.ui-alt-icon.ui-btn-icon-left.ui-nodisc-icon.ui-btn-inline.ui-btn-icon-notext.ui-icon-bars(href='#nav-panel-menu')
                    h2=  title
        mixin leftMenu()
            div#nav-panel-menu(data-role="panel" data-position-fixed="true"  data-display="push" data-theme="a")
                a(href="#panel-fixed-page2") ppp



    body
        div#pageHome(
                data-role='page' data-title="Home" data-url='pageHome'
                style='background-image: url("image/days.jpg"); background-position: center; background-attachment: fixed'
                )
            +divHeader('Mac-Store')
            +leftMenu()
            div(data-role='content')
                div.ui-body.ui-body-a(data-form='ui-body-a')
                    h1(style='text-align: center') Hellow will good
                        span  New text
                    div(data-role='navbar')
                        ul
                            li
                                a(href='#' ) Клавиатуры
                            li
                                a(href='#') Шлейфы
                            li



            div(data-role='footer' data-position='fixed')
                h2 footer

        div#pageMacBook(data-role='page' data-url='pageMacBook')
            +divHeader('MacBook')
        div#pageMacBookAir(data-role='page' data-url='pageMacBookAir')
            +divHeader('MacBook Air')
        div#pageMacBookPro(data-role='page' data-url='pageMacBookPro')
            +divHeader('MacBook Pro')
        div#pageiMac(data-role='page' data-url='pageiMac')
            +divHeader('iMac')


